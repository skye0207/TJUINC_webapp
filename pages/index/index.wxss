/* pages/index/index.wxss */

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
}

.header {
  height: 155rpx;
  flex: none;
}

.bg_img {
  height: 155rpx;
  width: 100%;
  position: absolute;
  z-index: 0;
}

.header_content {
  height: 155rpx;
  width: 100%;
  position: absolute;
  z-index: 1;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.avatar {
  width: 115rpx;
  height: 115rpx;
  margin-left: 50rpx;
  border-radius: 50%;
}

.user_info {
  color: white;
  font-size: 26rpx;
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
}

.user_num {
  margin-top: 12rpx;
}

.unbind_btn {
  font-size: 22rpx;
  line-height: 48rpx;
  height: 48rpx;
  padding: 0 45rpx;
  background-color: white;
  border-radius: 2000rpx;
  color: #338FCC;
  margin-top: 45rpx;
}

.concent_container {
  flex: 1 1 auto;
  display: flex;
  flex-direction: column;
}

.up_part {
  height: 420rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.ec_canvas_wrapper {
  margin-top: 30rpx;
  width: 280rpx;
  height: 280rpx;
  flex: none;
}

ec-canvas {
  width: 100%;
  height: 100%;
}

