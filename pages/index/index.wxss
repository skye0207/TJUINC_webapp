.up_part_other {
  display: flex;
  height: 110rpx;
  flex-direction: row;
  font-size: 26rpx;
  justify-content: space-around;
  flex: 1 1 auto;
}

.up_part_other_item {
  width: 170rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}


.down_part {
  height: 350rpx;
  width: 100%;
}

.down_part_item {
  height: 350rpx;
  padding: 0 !important;
}

.down_part_right_up {
  border-bottom: 1rpx solid #e9eaec;
}

.down_part_right_up, .down_part_right_down {
  height: 50%;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.icon_part {
  width: 150rpx;
  height: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.icon_part image{
  width: 90rpx;
  height: 90rpx;
}

.text_part {
  font-size: 28rpx;
  color: #333;
}

.info_part {
  border-top: 1rpx solid #e9eaec;
  flex: 1 1 auto;
} 

.notice_card_item_more {
  color: #2d8cf0;
  text-align: right
}

.prev_icon {
  border: none !important;
}

.page_wrapper {
  font-size: 26rpx;
}

.page_wrapper view {
  border: none !important;
}





